{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "generated/*": [
        "./dist/generated/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "api"
  ],
  "exclude": [
    "node_modules"
  ]
}